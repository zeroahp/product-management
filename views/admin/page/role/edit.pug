extends ../../layout/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug


block main
  +alert-success(3000)

  h1(class="mb-4") Chỉnh sửa nhóm quyền

  form(
    action=`/${prefixAdmin}/role/edit/${data.id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=data.title
      )
    div(class="form-group")
      label(for="desc") Mô tả
      input(
        type="text"
        class="form-control"
        id="desc"
        name="description"
        value=data.description

      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật